<odoo>
    <data>










        <template id="feedback_template" name="Feedback">
            <div class="oe_structure">
                <h1>Partner: <t t-esc="session.name"/></h1>
                <form action="/feedback/submit" method="POST">
					<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="form-group">
                        <label for="session">Session:</label>
                        <input type="text" name="session" class="form-control" t-att-value="session.id" readonly="True" required="True"></input>
                    </div>
                    <label for="expert_rating">Rate the expert:</label>
                    <select name="expert_rating">

                            <t t-foreach="integers" t-as="integer">
                                <option t-esc="integer"/>
                            </t>
                        </select>
                    <label for="workshop_rating">Rate the workshop:</label>
                    <select name="workshop_rating">

                            <t t-foreach="integers" t-as="integer">
                                <option t-esc="integer"/>
                            </t>
                        </select>
                    <div class="form-group">
                        <label for="name">Beschreibung:</label>
                        <textarea name="feedback_text" class="form-control" required="True"></textarea>
                    </div>
					<div class="form-group">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </template>






        <template id="thank_you" name="Thank you">
            <div class="oe_structure">
                <h1>Danke</h1>
            </div>
        </template>


    </data>
</odoo>
