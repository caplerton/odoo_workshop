<odoo>
    <data>
        <!-- Listenansicht für Workshop -->
        <record id="view_workshop_tree" model="ir.ui.view">
            <field name="name">workshop.workshop.tree</field>
            <field name="model">workshop.workshop</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- Formularansicht für Workshop -->
        <record id="view_workshop_form" model="ir.ui.view">
            <field name="name">workshop.workshop.form</field>
            <field name="model">workshop.workshop</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            
                        </group>
                        <group>
                            <field name="image" widget="image" 
                                options="{'preview_image': 'image'} , 'size': [250, 250]}" />
                        </group>
                    </group>
                    <group>
                        <field name="expert_ids" />
                        <field name="attachment_ids" widget="many2many_binary" options="{}"/>
                    </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_expert_tree" model="ir.ui.view">
            <field name="name">workshop.expert.tree</field>
            <field name="model">workshop.expert</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>


        <record id="view_workshop_form" model="ir.ui.view">
            <field name="name">workshop.expert.form</field>
            <field name="model">workshop.expert</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="expertise"/>

                        </group>
                        <group>
                            <field name="image" widget="image" 
                                options="{'preview_image': 'image'} , 'size': [100, 100]}" />
                        </group>
                    </group>
                    <group>
                            <field name="workshop_ids"  />
                            <field name="seesion_id" />
                    </group>

                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_session_tree" model="ir.ui.view">
            <field name="name">workshop.session.tree</field>
            <field name="model">workshop.session</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="view_workshop_form" model="ir.ui.view">
            <field name="name">workshop.session.form</field>
            <field name="model">workshop.session</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>

                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="start_time" />
				            <field name="end_time" />
                            <field name="expert_id"/>
                            <field name="workshop_ids" />
                        </group>


                    </sheet>
                </form>
            </field>
        </record>

    <record id="view_session_calendar" model="ir.ui.view">
		<field name="name">workshop.session.calendar</field>
		<field name="model">workshop.session</field>
		<field name="arch" type="xml">
			<calendar string="Workshop Sessions" date_start="start_time" date_stop="end_time" color="workshop_ids">
				<field name="name" />
			</calendar>
		</field>
	</record>
    </data>
</odoo>
